<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefWidth="590.0" style="-fx-background-color: rgba(196,196,196,0.45); -fx-background-radius: 20;" stylesheets="@ProfileStyling.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hackingthefuture.CommentCardController">
   <children>
      <Button fx:id="commentAuthorBtn" mnemonicParsing="false" style="-fx-background-color: transparent;" textFill="WHITE">
         <font>
            <Font name="Cooper Black" size="1.0" />
         </font>
         <graphic>
            <Label fx:id="commentAuthorLabel" alignment="CENTER" style="-fx-background-radius: 30; -fx-effect: dropshadow(three-pass-box, #000000 ,6,0,1,2);" stylesheets="@ProfileStyling.css" text="Username" textFill="WHITE">
               <font>
                  <Font name="Cooper Black" size="21.0" />
               </font>
               <padding>
                  <Insets bottom="2.0" left="13.0" right="13.0" />
               </padding>
            </Label>
         </graphic>
      </Button>
      <Label fx:id="commentDateLabel" styleClass="shadow" text="6-6-2024  6:43pm" textFill="WHITE">
         <font>
            <Font name="Arial Rounded MT Bold" size="18.0" />
         </font>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>
      <Label fx:id="commentContentLabel" alignment="TOP_LEFT" prefWidth="610.0" styleClass="shadow" text="" textFill="WHITE" wrapText="true">
         <font>
            <Font name="Calibri Bold" size="18.0" />
         </font>
         <VBox.margin>
            <Insets top="7.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Button fx:id="commentLikeBtn" mnemonicParsing="false" style="-fx-background-color: transparent;">
               <graphic>
                  <StackPane>
                     <children>
                        <ImageView fx:id="redLove" fitHeight="20.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../Resources/Images/like-icon.png" />
                           </image>
                        </ImageView>
                        <ImageView fx:id="blackLove" fitHeight="20.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../Resources/Images/not-like-icon.png" />
                           </image>
                        </ImageView>
                     </children>
                  </StackPane>
               </graphic>
            </Button>
            <Label fx:id="commentLikeCountLabel" alignment="CENTER" styleClass="shadow" text="2" textFill="WHITE" translateY="-2.0">
               <font>
                  <Font name="Cooper Black" size="20.0" />
               </font>
            </Label>
         </children>
         <VBox.margin>
            <Insets top="3.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="15.0" right="10.0" top="15.0" />
   </padding>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
</VBox>
