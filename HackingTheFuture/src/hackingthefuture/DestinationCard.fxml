<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="530.0" spacing="10.0" style="-fx-background-color: rgba(196,196,196,0.6); -fx-background-radius: 30;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hackingthefuture.DestinationCardController">
   <children>
      <ImageView fx:id="destinationImage" fitHeight="333.0" fitWidth="480.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Resources/Images/Biomedical%20Museum.png" />
         </image>
      </ImageView>
      <Label fx:id="destinationNameLabel" styleClass="shadow" stylesheets="@ProfileStyling.css" text="Pusat Sains &amp; Kreativiti Terengganu" textFill="WHITE" underline="true">
         <font>
            <Font name="Times New Roman Bold" size="30.0" />
         </font>
      </Label>
      <Label fx:id="destinationDistanceLabel" styleClass="shadow" stylesheets="@ProfileStyling.css" text="1000 km" textFill="WHITE">
         <font>
            <Font name="Times New Roman Bold" size="30.0" />
         </font>
      </Label>
      <Button fx:id="destinationBookBtn" mnemonicParsing="false" prefHeight="44.0" prefWidth="135.0" styleClass="editBtn" stylesheets="@ProfileStyling.css" textFill="WHITE">
         <font>
            <Font name="Cooper Black" size="15.0" />
         </font>
         <graphic>
            <Label stylesheets="@ProfileStyling.css" text="Book" textFill="WHITE">
               <font>
                  <Font name="Cooper Black" size="23.0" />
               </font>
               <effect>
                  <DropShadow height="5.0" offsetX="2.0" offsetY="2.0" radius="2.0" width="5.0">
                     <color>
                        <Color red="0.3368421196937561" green="0.3368421196937561" blue="0.3368421196937561" />
                     </color>
                  </DropShadow>
               </effect>
            </Label>
         </graphic>
      </Button>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>
