<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="box" stylesheets="@FriendPageStyling.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hackingthefuture.FriendRequestCardController">
   <children>
      <Hyperlink fx:id="link" focusTraversable="false" maxHeight="58.0" prefHeight="58.0" prefWidth="446.0" styleClass="shadow" stylesheets="@ProfileStyling.css" text="Username" />
      <Button fx:id="requestConfirmBtn" mnemonicParsing="false" style="-fx-background-color: #4FC8AB; -fx-background-radius: 20;" styleClass="shadow" stylesheets="@ProfileStyling.css">
         <graphic>
            <HBox alignment="CENTER_LEFT" spacing="3.0">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Resources/Images/confirm-icon.png" />
                     </image>
                  </ImageView>
                  <Label text="Confirm" textFill="WHITE">
                     <font>
                        <Font name="Segoe UI Bold" size="24.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets left="7.0" right="5.0" />
               </padding>
            </HBox>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="requestDeleteBtn" mnemonicParsing="false" style="-fx-background-color: #FF3131; -fx-background-radius: 20;" styleClass="shadow" stylesheets="@ProfileStyling.css">
         <graphic>
            <HBox alignment="CENTER_LEFT" spacing="3.0">
               <children>
                  <ImageView fitHeight="25.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Resources/Images/menu-cross.png" />
                     </image>
                  </ImageView>
                  <Label text="Delete" textFill="WHITE">
                     <font>
                        <Font name="Segoe UI Bold" size="24.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="1.0" left="7.0" right="5.0" />
               </padding>
            </HBox>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</HBox>
